{
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "extends": "airbnb-base",
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "indent": ["error", 4],
    "import/no-extraneous-dependencies": "off",
    "no-plusplus": "off",
    "no-param-reassign": "off"
  }
}
